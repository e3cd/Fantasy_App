<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Position</th>
      <th>Points</th>
      <th>Rebounds</th>
      <th>Assists</th>
      <th>Steals</th>
      <th>Blocks</th>
      <th>Fg</th>
      <th>Ft</th>
      <th>Threes</th>
      <th>Turnovers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.image %></td>
        <td><%= player.position %></td>
        <td><%= player.points %></td>
        <td><%= player.rebounds %></td>
        <td><%= player.assists %></td>
        <td><%= player.steals %></td>
        <td><%= player.blocks %></td>
        <td><%= player.fg %></td>
        <td><%= player.ft %></td>
        <td><%= player.threes %></td>
        <td><%= player.turnovers %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

